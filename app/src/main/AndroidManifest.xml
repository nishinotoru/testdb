<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="example.com.dbsample" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 追加したアクティビティの登録 -->
        <!-- SelectSheetProductはlabelを使わず、クラスでタイトルバーに表示するTitleをセットしています -->
        <activity
            android:name=".SelectSheetProduct" />
        <activity
            android:name=".SelectSheetListView"
            android:label="@string/name_selectsheet_listview" />
        <activity
            android:name=".SelectSheetTable"
            android:label="@string/name_selectsheet_tabel" />
    </application>

</manifest>